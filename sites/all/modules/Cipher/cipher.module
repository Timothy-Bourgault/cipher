function element_validate_direction($element) {
    if ($element['#value'] != 'left' && $element['#value'] != 'right') {
        form_error($element, t('Warning: You may only enter "left" or "right" for this input field!'));
    }
}

function element_validate_range($element) {
    if ($element['#value'] < 1 || $element['#value'] > 25) {
        form_error($element, t('Warning: You must enter a number within the valid range specified!!'));
    }
}

